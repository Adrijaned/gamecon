AddDefaultCharset UTF-8
RewriteEngine On

#---odstranění lomítka z konce
RewriteCond %{REQUEST_URI} /$
RewriteRule (.*)/$ /$1 [R,L]
#TRIK: L ukončí přepisy, nicméně přesměruje, tím se vyvolá nový reqest
#s už reparsovanou adresou, na které se vykoná pak korektně parsování
#cesty (viz další RewriteCond)

#---prepis cesty v adrese na promennou
RewriteCond %{REQUEST_URI} !\.[[:alnum:]]+$ 
RewriteRule (.*) index.php?req=$1 [L,QSA]

<Files ~ ".hhp">
	Order allow,deny
	Deny from all
</Files>
